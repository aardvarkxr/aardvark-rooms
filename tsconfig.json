{
	"compilerOptions": 
	{
		"target": "es2015",
		"module": "commonjs",
		"lib": ["es6", "es2015", "dom"],
		"declaration": true,
		"outDir": "./lib",
		"rootDir": "./src",
		"strict": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution" : "node",
		"typeRoots": 
		[
			"node_modules/@types",
			"customTypes"
		]

	},
	"exclude":
	[
		"node_modules",
		"lib",
		"__tests__"
	]

}

