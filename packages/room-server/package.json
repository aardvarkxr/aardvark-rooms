{
  "name": "@aardvarkxr/room-server",
  "version": "0.0.1",
  "description": "Server package for Aardvark rooms",
  "author": "Joe Ludwig <joe@programmerjoe.com>",
  "homepage": "",
  "license": "BSD-3-Clause",
  "main": "lib/room_server_main.js",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "commonjs",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rimraf -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
	"prepublishOnly": "npm run build",
	"serve": "node --inspect -r ts-node/register src/room_server_main.ts",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:clean": "jest --clearCache"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jest": "~26.0.4",
    "@types/node": "^12.11.7",
    "@types/ws": "^6.0.2",
    "bind-decorator": "^1.0.11",
    "express": "^4.17.1",
    "jest": "~26.1.0",
    "ts-jest": "~26.1.2",
    "path": "^0.12.7",
    "pkginfo": "^0.4.1",
    "rimraf": "~3.0.2",
    "typescript": "~3.9.6",
    "ws": "^7.1.1"
  },
  "dependencies": {
	"@aardvarkxr/aardvark-shared": "1.3.0",
    "@aardvarkxr/room-shared": "*",
    "@tlaukkan/tsm": "^0.8.5",
    "ts-node": "~8.10.2",
    "uuid": "^8.3.1"
  }
